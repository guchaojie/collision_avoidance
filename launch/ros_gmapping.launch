<launch>

  <!-- Define laser type-->
  <arg name="laser_type" default="hokuyo" />

  <!-- laser driver -->
  <include file="$(find ros_collision_avoidance)/laser/$(arg laser_type)_laser.launch" />
 
  <!-- Gmapping -->
  <arg name="custom_gmapping_launch_file" default="$(find ros_collision_avoidance)/launch/includes/gmapping/ros_gmapping.launch.xml"/>
  <include file="$(arg custom_gmapping_launch_file)"/>
 
  <!-- Move base -->
  <include file="$(find ros_collision_avoidance)/launch/includes/move_base.launch.xml"/>

</launch>
